<?xml version="1.0" encoding="UTF-8"?>
<project name="module_common" default="build" xmlns:ivy="antlib:org.apache.ivy.ant">
  <import file="${basedir}/../build-module.xml"/>
  
  <target name="retrieve.libs" depends="module_build.retrieve.libs, retrieve.manual.libs"/>

  <target name="retrieve.manual.libs">
    <mkdir dir="${lib-local.dir}"/>
    <!-- Retrieve Hibernate Spatial 4.3 (not currently released) -->
    <get skipexisting="true" src="http://www.hibernatespatial.org/repository/org/hibernate/hibernate-spatial/4.3-SNAPSHOT/hibernate-spatial-4.3-20140106.200509-2.jar" dest="${lib-local.dir}"/>
    <!-- Workaround for ivy not excluding these modules (see Common/ivy.xml) -->
    <delete file="${lib.dir}/hibernate-jpa-2.0-api-1.0.1.Final-jar.jar" quiet="true" />
    <delete file="${lib.dir}/geronimo-jpa_2.0_spec-1.1-bundle.jar" quiet="true" />
  </target>
</project>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
         http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="objectMapper" class="uk.ac.ox.zoo.seeg.abraid.mp.common.dto.json.AbraidJsonObjectMapper" />

    <bean id="webServiceClient" class="uk.ac.ox.zoo.seeg.abraid.mp.common.web.WebServiceClient" autowire="constructor">
        <property name="connectTimeoutMilliseconds" value="${webserviceclient.connectTimeoutMilliseconds}"/>
        <property name="readTimeoutMilliseconds" value="${webserviceclient.readTimeoutMilliseconds}"/>
    </bean>

</beans>
<?xml version="1.0" encoding="UTF-8"?>
<project name="module_dataacquisition" default="build" xmlns:ivy="antlib:org.apache.ivy.ant">
  <import file="${basedir}/../build-module.xml"/>

  <target name="retrieve.libs" depends="module_build.retrieve.libs, retrieve.manual.libs"/>

  <target name="retrieve.manual.libs">
    <mkdir dir="${lib.dir}"/>
    <!-- Retrieve Hibernate Spatial 4.3 (not currently released) -->
    <get skipexisting="true" src="http://www.hibernatespatial.org/repository/org/hibernate/hibernate-spatial/4.3-SNAPSHOT/hibernate-spatial-4.3-20140213.224750-4.jar" dest="${lib-local.dir}"/>
  </target>
  
  <target name="create.jar.manifest" depends="module_build.create.jar.manifest">
    <manifest file="${dist.out.dir}/MANIFEST.MF" mode="update">
      <attribute name="Main-Class" value="uk.ac.ox.zoo.seeg.abraid.mp.dataacquisition.Main"/>
      <attribute name="Class-Path" value="lib/*"/>
    </manifest>
  </target>
</project>

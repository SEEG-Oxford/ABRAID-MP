<?xml version="1.0" encoding="UTF-8"?>
<project name="module_dataacquisition" default="compile.module.dataacquisition">
  <dirname property="module.dataacquisition.basedir" file="${ant.file.module_dataacquisition}"/>
  
  <property name="module.jdk.home.dataacquisition" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.dataacquisition" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.dataacquisition" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.dataacquisition" value="${compiler.args}"/>
  
  <property name="dataacquisition.output.dir" value="${module.dataacquisition.basedir}/../../out/production"/>
  <property name="dataacquisition.testoutput.dir" value="${module.dataacquisition.basedir}/../../out/test"/>
  
  <path id="dataacquisition.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
    <fileset dir="${module.dataacquisition.basedir}/../../lib">
      <include name="*.jar"/>
    </fileset>
    <pathelement path="${module.dataacquisition.basedir}/../../out"/>
  </path>
  
  <path id="dataacquisition.module.production.classpath"/>
  
  <path id="dataacquisition.runtime.production.module.classpath"/>
  
  <path id="dataacquisition.module.classpath"/>
  
  <path id="dataacquisition.runtime.module.classpath"/>
  
  
  <patternset id="excluded.from.module.dataacquisition">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.dataacquisition">
    <patternset refid="excluded.from.module.dataacquisition"/>
  </patternset>
  
  <path id="dataacquisition.module.sourcepath">
    <dirset dir="${module.dataacquisition.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  <path id="dataacquisition.module.test.sourcepath">
    <dirset dir="${module.dataacquisition.basedir}">
      <include name="test"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.dataacquisition" depends="compile.module.dataacquisition.production,compile.module.dataacquisition.tests" description="Compile module DataAcquisition"/>
  
  <target name="compile.module.dataacquisition.production" description="Compile module DataAcquisition; production classes">
    <mkdir dir="${dataacquisition.output.dir}"/>
    <javac destdir="${dataacquisition.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" includeantruntime="false">
      <compilerarg line="${compiler.args.dataacquisition}"/>
      <bootclasspath refid="dataacquisition.module.bootclasspath"/>
      <classpath refid="dataacquisition.module.production.classpath"/>
      <src refid="dataacquisition.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.dataacquisition"/>
    </javac>
    
    <copy todir="${dataacquisition.output.dir}">
      <fileset dir="${module.dataacquisition.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.dataacquisition.tests" depends="compile.module.dataacquisition.production" description="compile module DataAcquisition; test classes" unless="skip.tests">
    <mkdir dir="${dataacquisition.testoutput.dir}"/>
    <javac destdir="${dataacquisition.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" includeantruntime="false">
      <compilerarg line="${compiler.args.dataacquisition}"/>
      <bootclasspath refid="dataacquisition.module.bootclasspath"/>
      <classpath refid="dataacquisition.module.classpath"/>
      <src refid="dataacquisition.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.dataacquisition"/>
    </javac>
    
    <copy todir="${dataacquisition.testoutput.dir}">
      <fileset dir="${module.dataacquisition.basedir}/test">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.dataacquisition" description="cleanup module">
    <delete dir="${dataacquisition.output.dir}"/>
    <delete dir="${dataacquisition.testoutput.dir}"/>
  </target>
</project>
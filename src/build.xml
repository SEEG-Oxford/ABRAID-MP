<?xml version="1.0" encoding="UTF-8"?>
<project name="abraid-mp_src" default="build.modules">
  <dirname property="module.abraid-mp_src.basedir" file="${ant.file.abraid-mp_src}"/>
  <!-- <property file="build.properties"/> -->

  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="128m"/>
  <patternset id="ignored.files">
    <exclude name="**/.git/**"/>
    <exclude name="**/*~/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.zip"/>
    <include name="*.war"/>
    <include name="*.ear"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.class"/>
  </patternset>
  
  <property name="project.jdk.home" value="${java.home}"/>
  <property name="project.jdk.bin" value="${java.home}/bin"/>
  <property name="project.jdk.classpath" value="${java.home}/lib"/>
  
  <!-- Modules -->
  
  <import file="${module.abraid-mp_src.basedir}/Common/build.xml"/>
  
  <import file="${module.abraid-mp_src.basedir}/DataAcquisition/build.xml"/>
  
  <import file="${module.abraid-mp_src.basedir}/DiseaseExtent/build.xml"/>
  
  <import file="${module.abraid-mp_src.basedir}/FrontEnd/build.xml"/>
  
  <import file="${module.abraid-mp_src.basedir}/GeoWiki/build.xml"/>
  
  <import file="${module.abraid-mp_src.basedir}/ModelWrapper/build.xml"/>
  
  <target name="build.init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean.modules" depends="clean.module.common, clean.module.dataacquisition, clean.module.diseaseextent, clean.module.frontend, clean.module.geowiki, clean.module.modelwrapper" description="cleanup all"/>
  
  <target name="build.modules" depends="build.init, clean.modules, compile.module.common, compile.module.dataacquisition, compile.module.diseaseextent, compile.module.frontend, compile.module.geowiki, compile.module.modelwrapper" description="build all modules"/>

</project>